<h3>{{name}}</h3>
<ul>
    <li class="date">Updated {{lastUpdatedFormated}}</a></li>
</ul>
<div class="actions">
    <a class="btn btn-info" href="{{site}}" target="_blank">Read</a>
    <div class="btn-group">
        <button class="btn">More</button>
        <button class="btn dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li>
                {{#subscribed}}
                    <a class="unsubscribe" href="#">Unsubscribe</a>
                {{/subscribed}}
                {{^subscribed}}
                    <a class="subscribe" href="#">Subscribe</a>
                {{/subscribed}}
            </li>
            <li class="site"><a href="{{site}}" target="_blank">Site</a></li>
            <li class="feed"><a href="{{feed}}" target="_blank">Feed</a></li>
        </ul>
    </div>
</div>